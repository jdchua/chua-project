<?xml version="1.0" encoding="utf-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/xmlschema-instance"
        xsi:nonamespaceschemalocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        require-authentication="anonymous-all">
    <parameter name="teamid"/>
    <actions>
      <set field="isAuthenticated" from="ec.user.userId ? true : false" />
    </actions>
    <widgets>
      <section name="login-or-register" condition="!isAuthenticated"> 
        <widgets>
            <container id="content" style="Login">
                <container style="inner">
                    <container style="container-fluid">
                        <render-mode><text type="html,vuet" template="true" location="component://chua-project/screen/chua-project/includes/login.ftl"/></render-mode>
                    </container>
                </container>
            </container>
        </widgets>
      </section> 
    </widgets>
</screen>
