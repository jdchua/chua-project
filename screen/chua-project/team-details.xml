<?xml version="1.0" encoding="utf-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/xmlschema-instance"
        xsi:nonamespaceschemalocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        require-authentication="anonymous-all">
    <parameter name="teamId"/>
    <actions>
      <set field="teamId" from="teamId" default-value="Lakers" />
    </actions>
    <widgets>
          <!-- team data -->
          <container-row>
            <row-col xs="0" sm="3" md="3" lg="4">
            </row-col>
            <!-- team data content-->
            <row-col xs="12" sm="6" md="6" lg="4">
              <include-screen location="component://chua-project/screen/sub-components/team-details.xml"/>
            </row-col>
            <row-col xs="0" sm="3" md="3" lg="4">
            </row-col>
          </container-row>
          <!-- main content, players and comments -->
          <container-row>
            <row-col xs="0" sm="1" md="1" lg="2">
            </row-col>
            <!-- main content - body -->
            <row-col xs="12" sm="10" md="10" lg="8">
              <container-row>
                <!-- players list -->
                <row-col xs="6" sm="6" md="6" lg="6" style="panel panel-default">
                  <include-screen location="component://chua-project/screen/sub-components/player-list.xml"/>
                </row-col>
                <!-- comments -->
                <row-col xs="12" sm="6" md="6" lg="6" style="panel panel-default">
                  <include-screen location="component://chua-project/screen/sub-components/comment-list.xml"/>
                </row-col>
              </container-row>
            </row-col>
            <row-col xs="0" sm="1" md="1" lg="2">
            </row-col>
          </container-row>
          <container>
            <label type="h1" text="."/>
          </container>
          <container style="navbar navbar-default navbar-fixed-bottom lead text-center">
            <link style="btn-success navbar-btn" text="vote"/>
            <link style="btn-success navbar-btn" text="comment"/>
          </container>
    </widgets>
</screen>
