<?xml version="1.0" encoding="utf-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/xmlschema-instance"
        xsi:nonamespaceschemalocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        require-authentication="anonymous-all">
    <widgets>
      <container-row>
        <row-col xs="12" sm="6">
          <section name="eastConferenceStandings">
            <actions>
              <set field="conference" value="East" />
            </actions>
            <widgets>
              <include-screen location="component://chua-project/screen/sub-components/team-list-standings.xml"/>
            </widgets>
          </section>
        </row-col>
        <row-col xs="12" sm="6">
          <section name="westConferenceStandings">
            <actions>
              <set field="conference" value="West" />
            </actions>
            <widgets>
              <include-screen location="component://chua-project/screen/sub-components/team-list-standings.xml"/>
            </widgets>
          </section>
        </row-col>
      </container-row>
    </widgets>
</screen>
